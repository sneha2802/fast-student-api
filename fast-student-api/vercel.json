# create project folder and move into it (if you haven't already)
mkdir -p fastapi-students
cd fastapi-students

# create venv (optional but recommended)
python -m venv .venv
# macOS / Linux
source .venv/bin/activate
# Windows (PowerShell)
# .venv\Scripts\Activate.ps1

# install dependencies
pip install fastapi "uvicorn[standard]"
